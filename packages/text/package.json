{
  "name": "instant.bible-text",
  "private": true,
  "scripts": {
    "build:pbjs": "pbjs -t static-module -w commonjs -o src/proto/index.js ../proto/*.proto",
    "build:pbts": "pbts -o src/proto/index.d.ts src/proto/index.js",
    "build": "npm run build:pbjs && npm run build:pbts",
    "prestart": "npm run build",
    "start": "DEBUG=* ts-node ./src/download"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "author": "Kenneth Powers <ken@kenpowers.net> (https://knpw.rs)",
  "license": "MIT",
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "debug": "^4.1.1",
    "fast-glob": "^3.0.4",
    "got": "^11.7.0",
    "iconv-lite": "^0.6.2",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/debug": "^4.1.5",
    "@types/iconv-lite": "0.0.1",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.5",
    "node": "^12.10.0",
    "protobufjs": "^6.8.8",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}

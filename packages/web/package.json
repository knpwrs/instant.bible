{
  "name": "@instantbible/web",
  "private": true,
  "description": "The instant.bible web interface",
  "scripts": {
    "build": "npm-run-all --serial build:pbjs build:pbts --parallel build:webpack build:storybook",
    "build:pbjs": "pbjs -t static-module -w commonjs -o src/proto/index.js ../proto/*.proto",
    "build:pbts": "pbts -o src/proto/index.d.ts src/proto/index.js",
    "build:webpack": "cross-env TS_NODE_PROJECT=./tsconfig.webpack.json NODE_ENV=production IB_API=https://api.instant.bible webpack --mode production",
    "build:storybook": "build-storybook",
    "deploy": "netlify deploy --prod --dir dist",
    "predev": "run-s build:pbjs build:pbts",
    "dev": "cross-env TS_NODE_PROJECT=./tsconfig.webpack.json NODE_ENV=development webpack-dev-server",
    "storybook": "start-storybook -p 6006",
    "precheck": "run-s build:pbjs build:pbts",
    "check": "npm-run-all check:*",
    "check:lint": "eslint --ext .ts,.tsx,.js,.jsx src",
    "check:format": "prettier --check 'src/**/*.{ts,tsx,js,jsx}'",
    "check:ts": "tsc --noEmit",
    "check:test": "npm run test",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lingui:add-locale": "lingui add-locale",
    "lingui:extract": "lingui extract --clean",
    "lingui:compile": "lingui compile"
  },
  "jest": {
    "transform": {
      "\\.[tj]sx?$": "babel-jest",
      "\\.svg$": "jest-svg-transformer"
    },
    "testRegex": "\\.test\\.tsx?$",
    "setupFilesAfterEnv": [
      "./src/opt/setup-jest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "author": "Kenneth Powers <ken@kenpowers.net> https://knpw.rs",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^10.0.27",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-brands-svg-icons": "^5.13.0",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "@hot-loader/react-dom": "^16.11.0",
    "@lingui/macro": "^2.9.0",
    "@lingui/react": "^2.9.0",
    "@popperjs/core": "^2.4.0",
    "@reach/tabs": "^0.11.2",
    "@reduxjs/toolkit": "^1.2.1",
    "@sentry/browser": "^5.15.5",
    "copy-text-to-clipboard": "^2.2.0",
    "history": "^4.10.1",
    "idb-keyval": "^3.2.0",
    "lodash": "^4.17.20",
    "p-progress": "^0.4.2",
    "polished": "^3.4.2",
    "pretty-bytes": "^5.4.1",
    "qs": "^6.9.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-popper": "^2.2.3",
    "react-redux": "^7.1.3",
    "react-spinners": "^0.8.1",
